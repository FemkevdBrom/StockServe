@page
@model StockServe.Pages.TafelDashbordModel
@{
}
<div class="container-fluid bg-dark text-light p-3" style="height: 100vh;">
    <div class="row h-100">
        <!-- Sidebar -->
        <div class="col-md-3 bg-secondary text-center rounded p-3">
            <h2>Menu</h2>
            <div class="d-grid gap-2 my-3">
                <button class="btn btn-light">TafelReseveren</button>
                <button class="btn btn-light">TafelOverzicht</button>
            </div>
        </div>

        <!-- Main Content: Tables -->
        <div class="col-md-9 bg-dark rounded p-3">
            <div class="row g-3">
                @foreach (var table in Model.Tables)
                {
                    <div class="col-md-3">
                        <a href="/GerechtDashbord?tableId=@table.TableNumber"
                           class="d-flex justify-content-center align-items-center text-dark bg-light fw-bold"
                           style="width: 100px; height: 100px; margin: auto; border-radius: 10px;">
                            @table.TableNumber
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
