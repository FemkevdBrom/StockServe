                @{
                    var random = new Random();
                    for (int i = 1; i <= 20; i++)
                    {
                    }
                }

                @for (int i = 1; i <= 20; i++)
                {
					bool isCircle = i % 4 == 0; // elke vierde tafel is een cirkel

                    <div class="col-md-3">
                        <!-- onthoud met welke tafel hij doorgestuurd is-->
                        <a href="/GerechtDashbord?tableId=@i" class="d-flex justify-content-center align-items-center text-dark bg-light fw-bold"
